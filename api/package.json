  "scripts": {
    "tsc": "tsc",
    "start": "ts-node src/server.ts",
    "start:watch": "nodemon",
    "test": "PORT=5000 mocha --timeout 15000 -r ts-node/register test/**/*.test.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lakinduakash/vpn-api.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lakinduakash/vpn-api/issues"
  },
  "homepage": "https://github.com/lakinduakash/vpn-api#readme",
  "dependencies": {
    "@types/mongoose": "^5.7.21",
    "@types/node": "^13.13.5",
    "@types/uuid": "^3.4.6",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "log4js": "^6.4.0",
    "mongoose": "^5.9.13",
    "node-ssh": "^10.0.2",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@types/chai": "^4.2.10",
    "@types/express": "^4.17.6",
    "@types/mocha": "^7.0.2",
    "@types/mongoose": "^5.7.10",
    "chai": "^4.2.0",
    "mocha": "^7.2.0",
    "nodemon": "^2.0.2",
    "nyc": "^15.0.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src",
      "ormconfig.json",
      "package.json",
      ".env",
      "tsconfig.json"
    ],
    "exec": "npm start",
    "ext": "ts,graphql,json,js"
  }
}
